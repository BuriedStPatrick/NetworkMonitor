{
  "Ping": {
    "Addresses": [
      "google.com"
    ]
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.MSSqlServer"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "NetworkMonitor.App",
      "Version": "#{Octopus.Release.Number}"
    }
  },

  "Serilog.MSSqlServer": {
    "connectionString": "Data Source=.;Initial Catalog=NM_Log;User ID=network_monitor_service;Password=MyPassword",
    "tableName": "NM_Log",
    "autoCreateSqlTable": true,
    "additionalColumns": [
      {
        "Name": "Application",
        "DataType": "string"
      },
      {
        "Name": "SourceContext",
        "DataType": "string"
      },
      {
        "Name": "Version",
        "DataType": "string"
      },
      {
        "Name": "RoundtripTime",
        "DataType": "decimal"
      },
      {
        "Name": "Address",
        "DataType": "string"
      },
      {
        "Name": "TTL",
        "DataType": "int"
      }
    ]
  }
}
